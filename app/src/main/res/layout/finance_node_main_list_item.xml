<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="0dp"
    android:paddingLeft="@dimen/financenode_listitem_general_padding"
    android:paddingTop="@dimen/financenode_listitem_general_padding"
    android:paddingBottom="@dimen/financenode_listitem_general_padding">

    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:text="Node Name"
        android:id="@+id/main_list_item_name"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:text="Node Balance"
        android:textStyle="bold"
        android:gravity="right"
        android:id="@+id/main_list_item_balance"
        android:ellipsize="end" />


</LinearLayout>