<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="0dp"
    android:paddingLeft="@dimen/financenode_listitem_general_padding"
    android:paddingTop="@dimen/financenode_listitem_general_padding"
    android:paddingBottom="@dimen/financenode_listitem_general_padding">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="210dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:text="Node Name"
            android:id="@+id/main_list_item_name"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="70" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/main_list_item_description"
            android:layout_weight="30" />
    </LinearLayout>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:text="Node Balance"
        android:textStyle="bold"
        android:gravity="right"
        android:id="@+id/main_list_item_balance"
        android:ellipsize="end" />


</LinearLayout>